{
  "name": "hn-pwa",
  "version": "2.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "main": "index.js",
  "files": [
    "index.js",
    "src",
    "babel.config.js",
    "webpack.config.js",
    "workbox.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/react-pwa.git"
  },
  "scripts": {
    "prebuild": "rm -rf dist/*; mkdir -p dist/{client,server};",
    "build": "npm run build:client && npm run build:server",
    "build:client": "BUILDING=true webpack",
    "build:server": "babel --config babel.config.js -x .js,.jsx -d dist/server src/client src/server/page.html.jsx",
    "precommit": "npm run lint",
    "deploy": "now --public --npm",
    "deploy:alias": "now alias `pbpaste` hackernewspwa.com",
    "lint": "eslint src/**/*.js src/**/*.jsx",
    "lighthouse": "npm run build && node ./scripts/lighthouse.js",
    "lighthouse:visual": "lighthouse http://localhost:3000/ --view",
    "start": "node src/server",
    "watch": "npm run watch:client & npm run watch:server",
    "watch:client": "webpack --watch",
    "watch:server": "nodemon -e js,jsx --watch src/server --exec 'node src/server'",
    "now-build": "NODE_ENV=production npm run build",
    "now-start": "NODE_ENV=production npm start"
  },
  "dependencies": {
    "csx": "^8.5.0",
    "fastify": "^1.4.0",
    "fastify-compress": "^0.6.0",
    "fastify-static": "^0.11.0",
    "history": "^4.7.2",
    "memory-cache": "^0.2.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-timeago": "^4.1.9",
    "rss-parser": "^3.1.2",
    "sanitize-html": "^1.18.2",
    "typestyle": "^1.7.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46",
    "@cowtech/eslint-config": "^4.19.4",
    "babel-loader": "^8.0.0-beta.2",
    "file-loader": "^1.1.11",
    "lighthouse": "^2.9.4",
    "nodemon": "^1.17.4",
    "now": "^11.1.9",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "webpack": "^4.8.1",
    "webpack-bundle-analyzer": "^2.11.2",
    "webpack-cli": "^2.1.3",
    "workbox-webpack-plugin": "^3.2.0"
  }
}

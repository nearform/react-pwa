{
  "name": "hn-pwa",
  "version": "2.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "Apache-2.0",
  "main": "index.js",
  "files": [
    "index.js",
    "src",
    ".babelrc",
    "webpack.config.js",
    "workbox.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/react-pwa.git"
  },
  "scripts": {
    "transpile:client": "babel --ignore src/client/sw.js -d dist/client src/client",
    "transpile:server": "babel -d dist/server src/server/page.html.jsx",
    "transpile:all": "npm run transpile:server && npm run transpile:client",
    "prebuild": "rm -rf coverage/* dist/*; mkdir -p coverage/badges dist/{client,server};",
    "build": "npm run build:client && npm run build:server",
    "build:client": "BUILDING=true webpack",
    "build:server": "npm run transpile:all && cp src/server/*.js dist/server",
    "start": "node dist/server",
    "watch": "npm run watch:server & npm run watch:client",
    "watch:client": "webpack --watch",
    "watch:server": "nodemon -e js,jsx --watch src --exec 'npm run build:server && npm run start'",
    "docker:build": "docker build -f .circleci/Dockerfile -t 711655675495.dkr.ecr.us-east-1.amazonaws.com/react-pwa:latest .",
    "docker:run": "docker run -i -d -t --privileged --name=react-pwa --hostname=react-pwa -p 3000:3000 711655675495.dkr.ecr.us-east-1.amazonaws.com/react-pwa",
    "lint": "eslint --ext .js,.jsx src",
    "prelighthouse": "NODE_ENV=production npm run build",
    "lighthouse": "NODE_ENV=production LIGHTHOUSE=true node ./scripts/lighthouse.js",
    "lighthouse:visual": "NODE_ENV=production LIGHTHOUSE=true VIEW=true node ./scripts/lighthouse.js",
    "postlighthouse": "cp -a coverage/badges dist/client/",
    "test:watch": "npm run unit -- --watch",
    "test": "npm run lint & npm run unit",
    "unit": "NODE_ENV=development jest src --coverage",
    "precommit": "NODE_ENV=development lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint -- --fix",
      "git add",
      "jest src --bail"
    ]
  },
  "dependencies": {
    "fastify": "^1.13.3",
    "fastify-compress": "^0.7.1",
    "fastify-static": "^1.0.0",
    "history": "^4.7.2",
    "memory-cache": "^0.2.0",
    "node-fetch": "^2.3.0",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.7.0-alpha.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-timeago": "^4.1.9",
    "rss-parser": "^3.6.1",
    "sanitize-html": "^1.20.0",
    "typestyle": "^2.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "copy-webpack-plugin": "^4.6.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.11.1",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-jsx": "^6.0.2",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.12.2",
    "eslint-plugin-react-hooks": "0.0.0",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^3.0.1",
    "gh-badges": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lighthouse": "^3.2.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "1.15.3",
    "puppeteer": "^1.11.0",
    "regenerator-runtime": "^0.13.1",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "wait-on": "^3.2.0",
    "webpack": "^4.28.3",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.2.0",
    "workbox-webpack-plugin": "^3.6.3"
  }
}
